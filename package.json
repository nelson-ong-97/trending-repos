{
  "name": "top-github-repos",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "zod": "^4.0.2",
      "@trpc/server": "^11.5.0",
      "@trpc/client": "^11.5.0",
      "@prisma/client": "^7.0.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @top-github-repos/db db:push",
    "db:studio": "bun run --filter @top-github-repos/db db:studio",
    "db:generate": "bun run --filter @top-github-repos/db db:generate",
    "db:migrate": "bun run --filter @top-github-repos/db db:migrate",
    "sync:repos": "bun run packages/api/src/scripts/sync-trending-repos.ts"
  },
  "packageManager": "bun@1.2.22",
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^22.13.11"
  }
}
